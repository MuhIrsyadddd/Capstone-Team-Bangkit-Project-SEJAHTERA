<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="917dp"
    android:background="@drawable/drawable_shape">

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="315dp"
        android:layout_height="52dp"
        android:layout_marginLeft="0.5dp"
        android:layout_marginTop="377dp"
        android:layout_gravity="top|center_horizontal"
        android:hint="Nama Lengkap"
        android:inputType="textEmailAddress"
        android:background="@drawable/container_rectangle"
        android:padding="10dp"
        android:textColor="#FF000000"
        android:textSize="13dp" />

    <EditText
        android:id="@+id/edit_date"
        android:layout_width="315dp"
        android:layout_height="52dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginLeft="0.5dp"
        android:layout_marginTop="447dp"
        android:background="@drawable/container_rectangle"
        android:hint="HH/BB/TT"
        android:padding="10dp"
        android:textColor="#FF000000"
        android:textSize="13dp"
        android:focusable="false"
        android:clickable="true" />


    <Spinner
        android:id="@+id/spinner_gender"
        android:layout_width="315dp"
        android:layout_height="52dp"
        android:layout_marginTop="517dp"
        android:layout_gravity="top|center_horizontal"
        android:background="@drawable/container_rectangle"
        android:padding="10dp"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="315dp"
        android:layout_height="52dp"
        android:layout_marginTop="587dp"
        android:layout_gravity="top|center_horizontal"
        android:backgroundTint="#6A9C89"
        android:text="Validation"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

</FrameLayout>
